            "name": ".NET Core Launch (console)",
            "type": "coreclr", 
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/net5.0/First_Project.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            //"console": "externalTerminal", yeni bir terminal a√ßar
